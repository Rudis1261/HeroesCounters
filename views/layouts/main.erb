<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Heroes Counter Admin </title>
    <meta name="description" content="Admin Interface">
    <meta name="author" content="Rudi Strydom">

    <link rel="icon" href="favicon.ico" />
    <link rel="icon" type="image/png" href="favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="favicon-16x16.png" sizes="16x16" />

    <link rel="stylesheet" href="<%= stylesheet_path 'application' %>">
  </head>
  <body>
    <header>
      <div class="container">
        <div class="brand">
          <a href="/">
            <img width="100" height="100" src="<%= asset_path 'logo.png' %>" alt="" />
            <h1>Heroes Counters</h1>
          </a>
        </div>

        <ul class="navigation">
          <% if !@user.nil? %>
            <% if @user.role == 'admin' %>
                  <li><%= link('/admin', 'Admin') %></li>
            <% end %>
            <li><%= link('/logoff', 'Logoff') %></li>
          <% end %>
        </ul>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
  <script async="true" src="<%= javascript_path 'application' %>"></script>
</html>