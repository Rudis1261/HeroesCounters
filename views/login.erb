<form method="post">

  <% if error_messages.size > 0 %>
    <% error_messages.each do |msg| %>
        <div class="error"><%= msg %></div>
    <% end %>
    <br />
  <% end %>

  <%= input('username_or_email', 'Username / Email address', {
      :placeholder => 'iam@thatguy.co.za',
      :errors => errors
  }) %>

  <%= input('password', 'Password', {
      :placeholder => '**********',
      :type => 'password',
      :errors => errors
  }) %>

  <input type="submit" />
</form>